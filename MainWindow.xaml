<Window x:Class="Multi_Layer_Spoofing_Detector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI-Based Multi-Layer Spoofing Detection and Prevention System"
        Height="800" Width="1400"
        Background="#1E1E2E"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2A2A3A"/>
        <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#00C9A7"/>
        <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#4DB6E2"/>
        <SolidColorBrush x:Key="TextBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SubTextBrush" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="CriticalBrush" Color="#FF4757"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FFA502"/>
        <SolidColorBrush x:Key="SafeBrush" Color="#26DE81"/>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" BlurRadius="8" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="AccentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryAccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#00B396"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryAccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3DA5D9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Indicator Style -->
        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Header Text Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Regular Text Style -->
        <Style x:Key="RegularTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <!-- Sub Text Style -->
        <Style x:Key="SubTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource SubTextBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                CornerRadius="12,12,0,0" Margin="0,0,0,0" Height="80">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" BlurRadius="8" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <Border Width="48" Height="48" Background="{StaticResource PrimaryAccentBrush}" 
                            CornerRadius="8" Margin="0,0,12,0">
                        <TextBlock Text="🛡️" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="AI-Based Multi-Layer Spoofing Detection" 
                                   Style="{StaticResource HeaderTextStyle}" Margin="0"/>
                        <TextBlock Text="Prevention System" 
                                   Style="{StaticResource SubTextStyle}" Margin="0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Date/Time Display -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <TextBlock x:Name="DateTimeText" Text="2025-10-10 14:32:45" Style="{StaticResource RegularTextStyle}" 
                               HorizontalAlignment="Right" Margin="0"/>
                    <TextBlock Text="System Active" Style="{StaticResource SubTextStyle}" 
                               HorizontalAlignment="Right" Margin="0"/>
                </StackPanel>

                <!-- Window Control Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <!-- Minimize Button -->
                    <Button x:Name="MinimizeButton" Width="46" Height="32" 
                            Background="Transparent" BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Minimize">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" Padding="12,8">
                                                <Path Data="M0,0 L10,0" Stroke="{StaticResource TextBrush}" 
                                                      StrokeThickness="1" HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#40FFFFFF"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#60FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Maximize/Restore Button -->
                    <Button x:Name="MaximizeButton" Width="46" Height="32" 
                            Background="Transparent" BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Maximize">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" Padding="12,8">
                                                <Path x:Name="MaximizeIcon" 
                                                      Data="M0,0 L0,9 L9,9 L9,0 Z M0,1 L8,1 M1,0 L1,8" 
                                                      Stroke="{StaticResource TextBrush}" 
                                                      StrokeThickness="1" Fill="Transparent"
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#40FFFFFF"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#60FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Close Button -->
                    <Button x:Name="CloseButton" Width="46" Height="32" 
                            Background="Transparent" BorderThickness="0"
                            Click="Close_Button_Click"  Cursor="Hand"
                            ToolTip="Close">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" Padding="12,8">
                                                <Path Data="M0,0 L8,8 M0,8 L8,0" Stroke="{StaticResource TextBrush}" 
                                                      StrokeThickness="1.5" HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#C0392B"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top Row: Network Status and Packet Capture -->
                <Grid Grid.Row="0" Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Network Status Panel -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="8,38,8,8">
                        <StackPanel>
                            <TextBlock Text="Network Status" Style="{StaticResource HeaderTextStyle}"/>
                            <Border x:Name="NetworkStatusIndicator" Background="{StaticResource SafeBrush}" CornerRadius="12" Padding="24" 
                                    HorizontalAlignment="Center" Margin="0,12">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="NetworkStatusIcon" Text="✅" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="NetworkStatusText" Text="SECURE" FontSize="24" FontWeight="Bold" 
                                               Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="NetworkStatusDescription" Text="No threats detected" FontSize="14" 
                                               Foreground="White" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                            <TextBlock x:Name="LastScanText" Text="Last scan: 2 minutes ago" Style="{StaticResource SubTextStyle}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Packet Capture Controls -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,38,8,8">
                        <Grid>
                            <!-- Main Content -->
                            <StackPanel x:Name="MainContent">
                                <TextBlock Text="Packet Capture &amp; Analysis Controls" Style="{StaticResource HeaderTextStyle}"/>

                                <!-- Capture Control Buttons -->
                                <Grid Margin="0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="StartCaptureBtn" Grid.Column="0" Content="Start Capture" 
                                            Style="{StaticResource AccentButtonStyle}"/>
                                    <Button x:Name="StopCaptureBtn" Grid.Column="1" Content="Stop Capture" 
                                            Style="{StaticResource SecondaryButtonStyle}" 
                                            IsEnabled="False"/>
                                </Grid>

                                <!-- File Management Buttons -->
                                <Grid Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="UploadPcapBtn" Grid.Column="0" Content="📁 Upload PCAP" 
                                            Style="{StaticResource SecondaryButtonStyle}"/>
                                    <Button x:Name="AnalyzeBtn" Grid.Column="1" Content="🔍 Analyze" 
                                            Style="{StaticResource AccentButtonStyle}"
                                            IsEnabled="False"/>
                                </Grid>

                                <!-- Additional Actions -->
                                <Button x:Name="OpenFolderBtn" Content="📂 Open Capture Folder" 
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        HorizontalAlignment="Stretch" Margin="4,8,4,0"/>

                                <!-- File Info Display -->
                                <Border x:Name="FileInfoPanel" Background="#333344" CornerRadius="8" Padding="12" 
                                        Margin="0,12" Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock Text="Attached PCAP File:" Style="{StaticResource SubTextStyle}" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock x:Name="FileNameText" Text="sample_capture.pcap" 
                                                   Style="{StaticResource RegularTextStyle}" Margin="0,4,0,0"/>
                                        <Grid Margin="0,8,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Ellipse x:Name="StatusIndicator" Grid.Column="0" Width="8" Height="8" 
                                                     Fill="{StaticResource SafeBrush}" Margin="0,0,8,0"/>
                                            <TextBlock x:Name="FileStatusText" Grid.Column="1" Text="Ready for analysis" 
                                                       Style="{StaticResource SubTextStyle}" VerticalAlignment="Center"/>
                                            <TextBlock x:Name="FileSizeText" Grid.Column="2" Text="2.3 MB" 
                                                       Style="{StaticResource SubTextStyle}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Active Capture Info -->
                                <Border x:Name="CaptureInfoPanel" Background="#333344" CornerRadius="8" Padding="12" 
                                        Margin="0,12,0,0" Visibility="Collapsed">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Ellipse Grid.Column="0" Width="12" Height="12" Fill="{StaticResource CriticalBrush}" 
                                                     Margin="0,0,8,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Style.Triggers>
                                                            <EventTrigger RoutedEvent="Loaded">
                                                                <BeginStoryboard>
                                                                    <Storyboard RepeatBehavior="Forever">
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                                                         From="1" To="0.3" Duration="0:0:1" 
                                                                                         AutoReverse="True"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock Grid.Column="1" Text="Active Capture In Progress:" 
                                                       Style="{StaticResource SubTextStyle}" FontWeight="SemiBold" 
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                        <TextBlock x:Name="CaptureInterfaceText" Text="Interface: eth0" 
                                                   Style="{StaticResource RegularTextStyle}" Margin="20,4,0,0"/>
                                        <TextBlock x:Name="PacketCountText" Text="Packets captured: 1,247" 
                                                   Style="{StaticResource RegularTextStyle}" Margin="20,0,0,0"/>
                                        <TextBlock x:Name="CaptureDurationText" Text="Duration: 00:05:23" 
                                                   Style="{StaticResource RegularTextStyle}" Margin="20,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Loading Overlay -->
                            <Border x:Name="LoadingOverlay" Background="#CC1E1E2E" CornerRadius="12" 
                                    Visibility="Collapsed" Panel.ZIndex="100">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <!-- Animated Spinner -->
                                    <Border Width="60" Height="60" Background="{StaticResource PrimaryAccentBrush}" 
                                            CornerRadius="30" Margin="0,0,0,20">
                                        <Border Width="50" Height="50" Background="Transparent" 
                                                BorderBrush="White" BorderThickness="4" CornerRadius="25"
                                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=LoadingOverlay, Path=Visibility}" 
                                                                     Value="Visible">
                                                            <DataTrigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard RepeatBehavior="Forever">
                                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                                         From="0" To="360" Duration="0:0:1"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.EnterActions>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Border.RenderTransform>
                                                <RotateTransform/>
                                            </Border.RenderTransform>
                                            <Border.RenderTransformOrigin>
                                                <Point X="0.5" Y="0.5"/>
                                            </Border.RenderTransformOrigin>
                                        </Border>
                                    </Border>

                                    <!-- Loading Text -->
                                    <TextBlock Text="Analyzing packets using AI models..." 
                                               Style="{StaticResource HeaderTextStyle}" 
                                               FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="LoadingProgressText" Text="Initializing analysis..." 
                                               Style="{StaticResource SubTextStyle}" 
                                               HorizontalAlignment="Center"/>

                                    <!-- Progress Bar -->
                                    <ProgressBar x:Name="AnalysisProgressBar" Width="200" Height="6" 
                                                 Margin="0,12,0,0" Background="#333344" 
                                                 Foreground="{StaticResource PrimaryAccentBrush}"
                                                 BorderThickness="0" IsIndeterminate="True"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Bottom Row: Analysis Results, Reports, and Settings -->
                <Grid Grid.Row="2" Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Analysis Results -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Analysis Results" Style="{StaticResource HeaderTextStyle}"/>

                            <TabControl Background="Transparent" BorderThickness="0">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                        <Setter Property="Background" Value="#333344"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="Margin" Value="2,0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border Name="Border" Background="{TemplateBinding Background}" 
                                                            CornerRadius="8,8,0,0" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter x:Name="ContentSite" HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center" ContentSource="Header"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryAccentBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#444455"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>

                                <TabItem Header="ARP Spoofing">
                                    <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                                        <StackPanel x:Name="ArpResultsPanel" Margin="8">
                                            <!-- TODO: ARP results -->
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>

                                <TabItem Header="DNS Spoofing">
                                    <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                                        <StackPanel x:Name="DnsResultsPanel" Margin="8">
                                            <!-- TODO: DNS results -->
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>

                                <TabItem Header="IP Spoofing">
                                    <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                                        <StackPanel x:Name="IpResultsPanel" Margin="8">
                                            <!-- TODO: IP results -->
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>
                        </StackPanel>
                    </Border>

                    <!-- Reports Section -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Reports" Style="{StaticResource HeaderTextStyle}"/>

                            <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="ReportsPanel">
                                    <!-- TODO: Reports -->
                                </StackPanel>
                            </ScrollViewer>

                            <StackPanel Margin="0,12,0,0">
                                <Button Content="Export CSV" Style="{StaticResource AccentButtonStyle}" 
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="Export JSON" Style="{StaticResource SecondaryButtonStyle}" 
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Settings Quick Access -->
                    <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Settings" Style="{StaticResource HeaderTextStyle}"/>

                            <StackPanel Margin="0,12">
                                <TextBlock Text="Threshold Adjustment" Style="{StaticResource RegularTextStyle}" 
                                           Margin="0,0,0,8"/>
                                <Slider Minimum="0" Maximum="100" Value="75" 
                                        Foreground="{StaticResource PrimaryAccentBrush}" Margin="0,0,0,16"/>

                                <TextBlock Text="Notifications" Style="{StaticResource RegularTextStyle}" 
                                           Margin="0,0,0,8"/>
                                <CheckBox Content="Email Alerts" Foreground="{StaticResource TextBrush}" 
                                          IsChecked="True" Margin="0,2"/>
                                <CheckBox Content="Desktop Notifications" Foreground="{StaticResource TextBrush}" 
                                          IsChecked="True" Margin="0,2"/>
                                <CheckBox Content="Sound Alerts" Foreground="{StaticResource TextBrush}" 
                                          IsChecked="False" Margin="0,2,0,16"/>

                                <TextBlock Text="Report Preferences" Style="{StaticResource RegularTextStyle}" 
                                           Margin="0,0,0,8"/>
                                <CheckBox Content="Auto-generate hourly" Foreground="{StaticResource TextBrush}" 
                                          IsChecked="True" Margin="0,2"/>
                                <CheckBox Content="Include packet details" Foreground="{StaticResource TextBrush}" 
                                          IsChecked="False" Margin="0,2"/>
                                <CheckBox Content="Send to admin" Foreground="{StaticResource TextBrush}" 
                                          IsChecked="True" Margin="0,2"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>