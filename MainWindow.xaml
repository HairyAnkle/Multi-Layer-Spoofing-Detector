<Window x:Class="Multi_Layer_Spoofing_Detector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI-Based Multi-Layer Spoofing Detection and Prevention System"
        Height="800" Width="1400"
        Background="#1E1E2E"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2A2A3A"/>
        <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#00C9A7"/>
        <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#4DB6E2"/>
        <SolidColorBrush x:Key="TextBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SubTextBrush" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="CriticalBrush" Color="#FF4757"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FFA502"/>
        <SolidColorBrush x:Key="SafeBrush" Color="#26DE81"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" BlurRadius="8" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryAccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#00B396"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryAccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3DA5D9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="RegularTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <Style x:Key="SubTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource SubTextBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                CornerRadius="12,12,0,0" Margin="0,0,0,0" Height="80">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" BlurRadius="8" Opacity="0.3"/>
            </Border.Effect>
            <Grid MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <Border Width="48" Height="48" Background="{StaticResource PrimaryAccentBrush}" 
                            CornerRadius="8" Margin="0,0,12,0">
                        <TextBlock Text="🛡️" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="AI-Based Multi-Layer Spoofing Detection" 
                                   Style="{StaticResource HeaderTextStyle}" Margin="0"/>
                        <TextBlock Text="PCAP Analyzer" 
                                   Style="{StaticResource SubTextStyle}" Margin="0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <TextBlock x:Name="DateTimeText" Text="2024-01-15 14:32:45" Style="{StaticResource RegularTextStyle}" 
                               HorizontalAlignment="Right" Margin="0"/>
                    <TextBlock Text="System Active" Style="{StaticResource SubTextStyle}" 
                               HorizontalAlignment="Right" Margin="0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <Button x:Name="MinimizeButton" Width="46" Height="32" 
                            Background="Transparent" BorderThickness="0"
                            Click="MinimizeButton_Click" Cursor="Hand"
                            ToolTip="Minimize">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" Padding="12,8">
                                                <Path Data="M0,0 L10,0" Stroke="{StaticResource TextBrush}" 
                                                      StrokeThickness="1" HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#40FFFFFF"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#60FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="MaximizeButton" Width="46" Height="32" 
                            Background="Transparent" BorderThickness="0"
                            Click="MaximizeButton_Click" Cursor="Hand"
                            ToolTip="Maximize">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" Padding="12,8">
                                                <Path x:Name="MaximizeIcon" 
                                                      Data="M0,0 L0,9 L9,9 L9,0 Z M0,1 L8,1 M1,0 L1,8" 
                                                      Stroke="{StaticResource TextBrush}" 
                                                      StrokeThickness="1" Fill="Transparent"
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#40FFFFFF"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#60FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="CloseButton" Width="46" Height="32" 
                            Background="Transparent" BorderThickness="0"
                            Click="CloseButton_Click" Cursor="Hand"
                            ToolTip="Close">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" Padding="12,8">
                                                <Path Data="M0,0 L8,8 M0,8 L8,0" Stroke="{StaticResource TextBrush}" 
                                                      StrokeThickness="1.5" HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#C0392B"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="8,38,8,8">
                        <StackPanel>
                            <TextBlock Text="System Risk" Style="{StaticResource HeaderTextStyle}"/>

                            <Border x:Name="NetworkStatusIndicator"
                Background="{StaticResource SafeBrush}"
                CornerRadius="12"
                Padding="20"
                HorizontalAlignment="Center"
                Margin="0,12"
                MaxWidth="520">

                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="NetworkStatusIcon"
                                               Visibility="Collapsed"/>
                                    <TextBlock x:Name="NetworkStatusText"
                                               Visibility="Collapsed"/>
                                    <TextBlock Text="CV Score"
                                               Foreground="#E2E2F5"
                                               FontSize="14"
                                               HorizontalAlignment="Center"/>

                                    <Border x:Name="CvssBadge"
                                            Background="#33FFFFFF"
                                            CornerRadius="12"
                                            Padding="18,10"
                                            Margin="0,6,0,12">
                                        <TextBlock x:Name="CvssScoreText"
                                                   Text="0.0"
                                                   FontSize="32"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"/>
                                    </Border>

                                    <TextBlock Text="Detected techniques"
                                               Foreground="#E2E2F5"
                                               FontSize="13"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,6"/>

                                    <ItemsControl x:Name="MitreBullets"
                                                  HorizontalAlignment="Center"
                                                  MaxWidth="480">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap"
                                                           Foreground="White"
                                                           FontSize="13"
                                                           Margin="0,2,0,2">
                                                    <Run Text="• "/>
                                                    <Run Text="{Binding Path=.}"/>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                </StackPanel>
                            </Border>

                            <TextBlock x:Name="LastScanText"
                   Text="Last scan: Ready"
                   Style="{StaticResource SubTextStyle}"
                   HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>



                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,38,8,8">
                        <StackPanel>
                            <TextBlock Text="📁 File Upload" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Text="Upload saved PCAP files for processing and analysis" 
                                       Style="{StaticResource SubTextStyle}" TextWrapping="Wrap" Margin="0,0,0,12"/>

                            <Button x:Name="UploadPcapBtn" Content="📤 Upload PCAP File" 
                                    Style="{StaticResource AccentButtonStyle}" Click="UploadPcapBtn_Click"
                                    HorizontalAlignment="Stretch" Margin="4,8"/>

                            <Border x:Name="FileInfoPanel" Background="#333344" CornerRadius="8" Padding="12" 
                                    Margin="0,12" Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock Text="📋 Uploaded File:" Style="{StaticResource SubTextStyle}" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock x:Name="FileNameText" Text="sample_capture.pcap" 
                                               Style="{StaticResource RegularTextStyle}" Margin="0,4,0,0"/>
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse x:Name="StatusIndicator" Grid.Column="0" Width="8" Height="8" 
                                                 Fill="{StaticResource SafeBrush}" Margin="0,0,8,0"/>
                                        <TextBlock x:Name="FileStatusText" Grid.Column="1" Text="Ready for analysis" 
                                                   Style="{StaticResource SubTextStyle}" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="FileSizeText" Grid.Column="2" Text="2.3 MB" 
                                                   Style="{StaticResource SubTextStyle}" VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Border Background="#2A3A4A" CornerRadius="8" Padding="12" Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="Status:" Style="{StaticResource SubTextStyle}" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="UploadModuleStatus" Text="✓ Ready to accept PCAP files" 
                                               Style="{StaticResource RegularTextStyle}" Foreground="{StaticResource SafeBrush}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="🔬 Packet Analysis" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Text="Parse packets and extract features using Python (Scapy)" 
                                       Style="{StaticResource SubTextStyle}" TextWrapping="Wrap" Margin="0,0,0,12"/>

                            <Button x:Name="AnalyzeBtn" Content="▶️ Start Packet Analysis" 
                                    Style="{StaticResource AccentButtonStyle}" Click="AnalyzeBtn_Click" 
                                    IsEnabled="False" HorizontalAlignment="Stretch" Margin="0,0,0,12"/>

                            <Border Background="#2A3A4A" CornerRadius="8" Padding="12">
                                <StackPanel>
                                    <TextBlock Text="Status:" Style="{StaticResource SubTextStyle}" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="AnalysisModuleStatus" Text="⏸ Waiting for PCAP file" 
                                               Style="{StaticResource RegularTextStyle}" Foreground="{StaticResource WarningBrush}"/>
                                    <TextBlock x:Name="AnalysisModuleDetails" Text="Upload a file to begin" 
                                               Style="{StaticResource SubTextStyle}" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="🤖 Detection" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Text="Execute trained AI model to detect IP, ARP, and DNS spoofing" 
                                       Style="{StaticResource SubTextStyle}" TextWrapping="Wrap" Margin="0,0,0,12"/>

                            <Border Background="#2A3A4A" CornerRadius="8" Padding="12">
                                <StackPanel>
                                    <TextBlock Text="Detection Layers:" Style="{StaticResource SubTextStyle}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <Ellipse x:Name="ArpDetectionIndicator" Width="10" Height="10" Fill="#666" Margin="0,0,8,0"/>
                                        <TextBlock Text="ARP Spoofing Detection" Style="{StaticResource SubTextStyle}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <Ellipse x:Name="DnsDetectionIndicator" Width="10" Height="10" Fill="#666" Margin="0,0,8,0"/>
                                        <TextBlock Text="DNS Spoofing Detection" Style="{StaticResource SubTextStyle}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <Ellipse x:Name="IpDetectionIndicator" Width="10" Height="10" Fill="#666" Margin="0,0,8,0"/>
                                        <TextBlock Text="IP Spoofing Detection" Style="{StaticResource SubTextStyle}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="DetectionModuleStatus" Text="Status: Standby" 
                                               Style="{StaticResource RegularTextStyle}" Margin="0,12,0,0" Foreground="{StaticResource SubTextBrush}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <Border x:Name="LoadingOverlay" Background="#CC1E1E2E" CornerRadius="12" 
                                Grid.ColumnSpan="2" Visibility="Collapsed" Panel.ZIndex="100">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Border Width="60" Height="60" Background="{StaticResource PrimaryAccentBrush}" 
                                        CornerRadius="30" Margin="0,0,0,20">
                                    <Border Width="50" Height="50" Background="Transparent" 
                                            BorderBrush="White" BorderThickness="4" CornerRadius="25"
                                            HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=LoadingOverlay, Path=Visibility}" 
                                                                 Value="Visible">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                                     From="0" To="360" Duration="0:0:1"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Border.RenderTransform>
                                            <RotateTransform/>
                                        </Border.RenderTransform>
                                        <Border.RenderTransformOrigin>
                                            <Point X="0.5" Y="0.5"/>
                                        </Border.RenderTransformOrigin>
                                    </Border>
                                </Border>

                                <TextBlock Text="Processing..." 
                                           Style="{StaticResource HeaderTextStyle}" 
                                           FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock x:Name="LoadingProgressText" Text="Initializing modules..." 
                                           Style="{StaticResource SubTextStyle}" 
                                           HorizontalAlignment="Center"/>

                                <ProgressBar x:Name="AnalysisProgressBar" Width="200" Height="6" 
                                             Margin="0,12,0,0" Background="#333344" 
                                             Foreground="{StaticResource PrimaryAccentBrush}"
                                             BorderThickness="0" IsIndeterminate="True"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <Grid Grid.Row="2" Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="📊 Results Display" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Text="Detection outputs with threat indicators and logs" 
                                       Style="{StaticResource SubTextStyle}" TextWrapping="Wrap" Margin="0,0,0,8"/>

                            <TabControl Background="Transparent" BorderThickness="0">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                        <Setter Property="Background" Value="#333344"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="Margin" Value="2,0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border Name="Border" Background="{TemplateBinding Background}" 
                                                            CornerRadius="8,8,0,0" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter x:Name="ContentSite" HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center" ContentSource="Header"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryAccentBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#444455"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>

                                <TabItem Header="🔴 ARP Spoofing">
                                    <ScrollViewer Height="340" VerticalScrollBarVisibility="Auto">
                                        <StackPanel x:Name="ArpResultsPanel" Margin="8">
                                            <TextBlock Text="No analysis results yet. Upload a PCAP file and run analysis." 
                                                       Style="{StaticResource SubTextStyle}" TextAlignment="Center" Margin="20"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>

                                <TabItem Header="🟡 DNS Spoofing">
                                    <ScrollViewer Height="340" VerticalScrollBarVisibility="Auto">
                                        <StackPanel x:Name="DnsResultsPanel" Margin="8">
                                            <TextBlock Text="No analysis results yet. Upload a PCAP file and run analysis." 
                                                       Style="{StaticResource SubTextStyle}" TextAlignment="Center" Margin="20"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>

                                <TabItem Header="🟢 IP Spoofing">
                                    <ScrollViewer Height="340" VerticalScrollBarVisibility="Auto">
                                        <StackPanel x:Name="IpResultsPanel" Margin="8">
                                            <TextBlock Text="No analysis results yet. Upload a PCAP file and run analysis." 
                                                       Style="{StaticResource SubTextStyle}" TextAlignment="Center" Margin="20"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>

                                <TabItem Header="📋 Threat Logs">
                                    <ScrollViewer Height="340" VerticalScrollBarVisibility="Auto">
                                        <StackPanel x:Name="AlertsPanel" Margin="8">
                                            <TextBlock Text="No threat alerts. System is secure." 
                                                       Style="{StaticResource SubTextStyle}" TextAlignment="Center" Margin="20"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="📄 Report Generation" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Text="Documentation and preservation of detection results" 
                                       Style="{StaticResource SubTextStyle}" TextWrapping="Wrap" Margin="0,0,0,12"/>

                            <Border Background="#2A3A4A" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Analysis Summary:" Style="{StaticResource SubTextStyle}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Threats:" Style="{StaticResource SubTextStyle}"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TotalThreatsText" Text="0" Style="{StaticResource RegularTextStyle}" FontWeight="Bold"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Critical Alerts:" Style="{StaticResource SubTextStyle}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="CriticalAlertsText" Text="0" Style="{StaticResource RegularTextStyle}" FontWeight="Bold" Foreground="{StaticResource CriticalBrush}"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Packets Analyzed:" Style="{StaticResource SubTextStyle}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="PacketsAnalyzedText" Text="0" Style="{StaticResource RegularTextStyle}" FontWeight="Bold"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="Select Report Format:" Style="{StaticResource RegularTextStyle}" Margin="0,0,0,8" FontWeight="SemiBold"/>

                            <Button Content="📄 Generate HTML Report" Style="{StaticResource AccentButtonStyle}" 
                                    HorizontalAlignment="Stretch" Click="GenerateHtmlReportBtn_Click" Margin="0,4"/>
                            <Button Content="📋 Generate JSON Report" Style="{StaticResource SecondaryButtonStyle}" 
                                    HorizontalAlignment="Stretch" Click="GenerateJsonReportBtn_Click" Margin="0,4"/>

                            <Border Background="#2A3A4A" CornerRadius="8" Padding="12" Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="Status:" Style="{StaticResource SubTextStyle}" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ReportModuleStatus" Text="✓ Ready to generate reports" 
                                               Style="{StaticResource RegularTextStyle}" Foreground="{StaticResource SafeBrush}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
